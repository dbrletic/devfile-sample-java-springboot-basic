<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="true">
    <property name="LOG_ROOT" value="/opt/cms/logs" />
    <property name="TRANSACTRION_LOG_NAME" value="transaction" />
<!-- STDOUT console output   -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

  
     <!-- Fluency -->
    <appender name="FLUENCY_SYNC" class="ch.qos.logback.more.appenders.DataFluentAppender">
        <!-- Fluentd connection -->
        <remoteHost>${FLUENT-REMOTE-HOST}</remoteHost>
        <port>24224</port>
        <tag>transaction-log</tag>
    </appender>

    <!-- <appender name="FLUENCY" class="ch.qos.logback.classic.AsyncAppender">
         Max queue size of logs which is waiting to be sent (When it reach to the max size, the log will be disappeared). 
        <queueSize>999</queueSize>
         Never block when the queue becomes full.
        <neverBlock>true</neverBlock>
        <maxFlushTime>10000</maxFlushTime>
        <appender-ref ref="FLUENCY_SYNC" />
    </appender> -->

    <logger name="fluent_transaction_log" additivity="true">
        <appender-ref ref="FLUENCY_SYNC"/>
    </logger>

    <root level='${ROOT_LOG_LEVEL}'>
	    <appender-ref ref="FLUENCY_SYNC"/>
        <appender-ref ref="STDOUT" />
    </root>


</configuration>